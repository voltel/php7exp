<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}My Admin Page{% endblock %}</title>

        <link href="{{ asset('css/main.css') }}" rel="stylesheet" type="text/css" />

        {% block link_css %}{% endblock %}

        <!-- Note. Bootstrap files are in vendor/twbs directory -->
        <!--
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"/>
        -->
        <link rel="stylesheet" href="/css/bootstrap/bootstrap.min.css" type="text/css"/>
        <link rel="stylesheet" href="/css/fontello-cd81d595/css/fontello.css" type="text/css"/>

        <!-- jQuery UI CSS -->
        <link rel="stylesheet" href="/js/vendor/jquery-ui/jquery-ui.min.css" type="text/css"/>

        <!-- jTable CSS -->
        <link rel="stylesheet" href="/js/vendor/jtable/themes/metro/lightgray/jtable.min.css" type="text/css"/>

    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <a class="navbar-brand" href="#">My app</a>
            </div><!-- /.navbar-header -->
            <div id="navbar" class="navbar-collapse ">
              <ul class="nav navbar-nav navbar-right">
                <!-- Login/Logout switch -->
                {% if app.user_session.getUser().getEmail() %}
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('admin_users') }}">Users</a></li>
                    <li><a href="{{ path('admin_posts_list') }}">Posts</a></li>
                    <li><a href="{{ path('admin_stats') }}">Statistics</a></li>
                    <li><a href="{{ path('logout') }}">Logout</a></li>
                {% else %}
                  <li><a href="{{ path('login') }}">Log in</a></li>
                {% endif %}
              </ul>
            </div><!-- /#navbar-->
          </div><!-- /.container -->
        </nav>


        <main class="container">
          {% block content %}{% endblock %}
        </main><!-- /.container -->



        <!-- bootstrap -->
        <!--
        <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
        -->
        <script src="/js/vendor/jquery/3.0.0/jquery.min.js"></script>
        <!--
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
        -->
        <script src="/js/vendor/tether/1.2.0/tether.min.js"></script>
        <script src="/js/vendor/bootstrap/4.0.0./bootstrap.min.js"></script>
        <!--
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
        -->

        <!-- jQuery UI JS -->
        <script src="/js/vendor/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>

        <!-- jTable JS -->
        <script src="/js/vendor/jtable/jquery.jtable.min.js" type="text/javascript"></script>


        <script src="/js/script.js" type="text/javascript"></script>

        <!-- additional markup -->
        {% block additional_markup %}{% endblock %}

        {% block scripts %}{% endblock %}

    </body>
</html>
