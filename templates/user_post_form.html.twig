{% extends 'base.html.twig' %}
  {% block title %}Post{% endblock %}

  {% block content %}
  <h2>Post</h2>

  <div class="row">
    <div class="col-sm-4">
      {% for error in errors %}
        <div class="alert-warning">
          {{ error }}
        </div><!-- /.alert -->
      {% endfor %}
    </div><!-- /.col-*-* -->
  </div><!-- /.row -->

  <div class="row">
    <div class="clo-sm-4">
      <form method="POST" action={{ path('submit_user_post')}} class="form-horizontal">

        <!-- Post Title -->
        <div class="form-group">
          <label for="inputTitle" class="col-sm-3 control-label">Title</label>
          <div class="col-sm-9">
            <input name="title" type="text" class="form-control" id="inputTitle" placeholder="Title of the post">
          </div>
        </div><!-- /.form-group -->

        <!-- Post Description -->
        <div class="form-group">
          <label for="inputDescription" class="col-sm-3 control-label">Description</label>
          <div class="col-sm-9">
            <textarea name="description" row="5" class="form-control" id="inputDescription" placeholder="Text of the post"></textarea>
          </div>
        </div><!-- /.form-group -->

        <!-- Button "Post" -->
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <input name="token" type="hidden" value="{{ token }}">
            <button type="submit" class="btn btn-primary">Post</button>
          </div>
        </div><!-- /.form-group -->

      </form>
    </div><!-- /.col-*-* -->
  </div><!-- /.row -->
  {% endblock %}
